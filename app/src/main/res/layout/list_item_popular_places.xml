<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"

    >
    <ImageView
        android:id="@+id/iv_list_item_popular_places"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/klcc_photo_small"
        android:layout_margin="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_list_item_popular_places"
        >

        <TextView
            android:id="@+id/tv_list_item_popular_places_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Batu Caves"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_list_item_popular_places_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="11sp"
            android:maxLines="3"
            />


    </LinearLayout>



</RelativeLayout>