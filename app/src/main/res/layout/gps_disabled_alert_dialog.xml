<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"
    android:elevation="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCATION NOT FOUND!"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginTop="16dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_gps_disabled_message"
        android:text="@string/gps_disabled_alert"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorLightBlack"
        android:layout_below="@+id/title"
        android:fontFamily="@font/open_sans_semibold"

        />

    <TextView
        android:id="@+id/dialog_gps_disabled_got_it_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_gps_disabled_message"
        android:layout_centerHorizontal="true"
        android:text="GOT IT"
        android:textSize="18sp"
        android:textColor="@color/colorLightBlack"
        android:layout_margin="16dp"


        />

    </RelativeLayout>


</android.support.v7.widget.CardView>