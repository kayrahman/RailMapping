<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorLightBlack"
    android:fitsSystemWindows="true"

    >

    <VideoView
        android:id="@+id/vv_ac_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        />


    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dynalight"
        android:gravity="center"
        android:text="Welcome to KL"
        android:textAllCaps="false"
        android:textColor="@color/colorOrange"
        android:textSize="36sp"
       />


    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/colorWhite"
            />
        <EditText
            android:id="@+id/et_ac_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputField.Credential"
            android:textColorHint="@color/white"
            android:hint="example@gmail.com"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/colorWhite"
            />
        <EditText
            android:id="@+id/et_ac_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputField.Credential"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:hint="123456"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_one"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        >


    <Button
        android:id="@+id/btn_ac_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/bg_login_btn"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"


        />

    <Button
        android:id="@+id/btn_ac_login_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_register_btn"
        android:text="Register"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="16dp"
        />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/pro_login_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorAccent"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        />


</RelativeLayout>